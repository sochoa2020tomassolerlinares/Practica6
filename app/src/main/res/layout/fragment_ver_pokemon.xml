<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_pokemon_pokemon_foreground">


    <TextView
        android:id="@+id/tvNombrePokemon"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/pokemonName"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/ivPokemonVer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />

    <ImageView
        android:id="@+id/ivPokemonVer"
        android:layout_width="344dp"
        android:layout_height="354dp"
        android:src="@drawable/caterpie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombrePokemon"
        android:contentDescription="TODO" />
</androidx.constraintlayout.widget.ConstraintLayout>